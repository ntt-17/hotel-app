<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="813dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/txtDN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Nhập"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="449dp">

            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="398dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/inputMail"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:drawableLeft="@drawable/baseline_email"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:paddingLeft="10dp"
                    android:textColor="#FBFBFB"
                    android:textColorHighlight="#009688"
                    android:textColorHint="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtMK"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/input_bg"
                    android:drawableLeft="@drawable/baseline_security"
                    android:ems="10"
                    android:hint="Mật Khẩu"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:paddingLeft="10dp"
                    android:textColor="#FBFBFB"
                    android:textColorHint="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtQMK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Quên mật khẩu?"
                    android:textAlignment="center"
                    android:textColor="#E91E63"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnDK"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="#E91E63"
                    android:text="Đăng nhập"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txtCCTK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chưa có tài khoản?"
                    android:textAlignment="center"
                    android:textColor="#E91E63" />

                <TextView
                    android:id="@+id/txtDK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký"
                    android:textAlignment="center"
                    android:textColor="#E91E63"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnLogGoogle"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:drawableStart="@drawable/google"
                    android:text="Google"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnLogFacebook"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:drawableStart="@drawable/facebook"
                    android:text="Facebook"
                    android:textColor="#000000" />

            </LinearLayout>
        </TableLayout>
    </LinearLayout>

</LinearLayout>